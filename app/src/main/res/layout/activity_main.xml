<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ButtonClicked"
            android:text="Button"
            android:foreground="@drawable/p3"
            android:layout_marginLeft="250px"
            android:background="@drawable/p3"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ButtonClicked1"
            android:text="Button"
            android:foreground="@drawable/p1"
            android:background="@drawable/p1"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ButtonClicked2"
            android:text="Button"
            android:foreground="@drawable/p2"
            android:background="@drawable/p2"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>